{
  "compileOnSave": true,
  "compilerOptions": {
    "removeComments": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es5",
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "watch": false,
    "types": [
      "mocha"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "include": [
    "src/**/*.ts"
  ]
}